<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFF"
        android:layout_weight="1">   	    
    </android.support.v4.view.ViewPager>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#b2b2b2"/>
    
    <RadioGroup
        android:id="@+id/id_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottom_bg"
        android:orientation="horizontal">
        
        <RadioButton 
            android:id="@+id/rb_btn1"
            android:text="@string/home_page"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/selector_homepage"
            android:checked="true"/>
        
        <RadioButton 
            android:id="@+id/rb_btn2"
            android:drawableTop="@drawable/selector_rank"
            android:text="@string/rank"
            style="@style/BottomTabStyle"/>        
        
        <RadioButton
            android:id="@+id/rb_btn3"
            android:text="@string/cartoon_circle"
            android:drawableTop="@drawable/selector_circle"
            style="@style/BottomTabStyle"/>
        
        <RadioButton 
            android:id="@+id/rb_btn4"
            android:text="@string/download"
            android:drawableTop="@drawable/selector_download"
            style="@style/BottomTabStyle"/>
        
    </RadioGroup>

</LinearLayout>
