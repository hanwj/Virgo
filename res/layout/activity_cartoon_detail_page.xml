<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/id_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:drawableLeft="@drawable/backicon"
            android:gravity="center_vertical"
            android:background="@null"
            android:textColor="@color/blue"
            android:text="@string/back"/>
		<TextView 
		    android:id="@+id/id_title"
		    android:text="@string/default_str"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:paddingRight="15dp"
		    android:layout_weight="1"
		    android:gravity="center"/>
		<TextView 
		    android:id="@+id/id_downloadbtn"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:gravity="center_vertical"
		    android:paddingRight="5dp"
		    android:textColor="@color/blue"
		    android:text="@string/download"/>
		
    </LinearLayout>
	
	<ScrollView 
	    android:id="@+id/id_scrollview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scrollbars="none">
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
	        <FrameLayout
	            android:layout_width="match_parent"
	            android:layout_height="180dp">
	            
	            <View 
	                android:layout_width="match_parent"
	                android:layout_height="100dp"
	                android:background="@color/blue"/>
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:orientation="horizontal">
	                <Button 
	                    android:id="@+id/id_evaluatebtn"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="20dp"
	                    android:drawableTop="@drawable/collection_icon"
	                    android:text="4.2"
	                    android:textColor="@color/white"
	                    android:background="@null"
	                    android:gravity="center_horizontal"/>
	                <ImageView 
	                    android:id="@+id/id_img"
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:paddingTop="10dp"
	                    android:layout_weight="1"
	                    android:layout_gravity="center_horizontal"
	                    android:src="@drawable/pic4"/>
	                <Button 
	                    android:id="@+id/id_levelbtn"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="20dp"
	                    android:drawableTop="@drawable/fire_icon"
	                    android:text="B"
	                    android:textColor="@color/white"
	                    android:background="@null"
	                    android:gravity="center_horizontal"/>
	            </LinearLayout>
	        </FrameLayout>
	        
	        <TextView 
	            android:id="@+id/id_name"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:text="书名"/>
	        <TextView 
	            android:id="@+id/id_autor"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:textColor="@color/gray"
	            android:text="作者"/>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="45dp"
	            android:orientation="horizontal">
	            <Button
	                android:id="@+id/id_collectionbtn"
	                android:layout_width="0dp"
	                android:layout_height="45dp"
	                android:layout_marginLeft="17dp"
	                android:layout_weight="1"
	                android:background="@drawable/shape_round_rectangle"
	                android:textColor="@color/white"
	                android:text="@string/add_collection"/>
	            <View 
	                android:layout_width="17dp"
	                android:layout_height="match_parent"/>
	            <Button 
	                android:id="@+id/id_readbtn"
	                android:layout_width="0dp"
	                android:layout_height="45dp"
	                android:layout_weight="1"
	                android:layout_marginRight="17dp"
	                android:background="@drawable/shape_round_rectangle"
	                android:textColor="@color/white"
	                android:text="@string/continue_read"/>
	        </LinearLayout>
	        
	        <TextView 
	            android:id="@+id/id_introduction"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:singleLine="false"
	            android:paddingLeft="30dp"
	            android:paddingRight="30dp"
	            android:text="introduction"
	            android:textColor="@color/black_3"/>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:paddingLeft="30dp"
	            android:paddingRight="30dp">
	            <LinearLayout 
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center_horizontal"
	                android:orientation="vertical">
	                <ImageView 
	                    android:id="@+id/id_sharedbtn"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:src="@drawable/sharebtn"
	                    android:scaleType="fitCenter"/>
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content" 
	                    android:textColor="@color/black_3"
	                    android:text="@string/shared"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:layout_marginLeft="20dp"
	                android:gravity="center_horizontal"
	                android:orientation="vertical">
	                <ImageView 
	                    android:id="@+id/id_deliverbtn"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:src="@drawable/deliverbtn"
	                    android:scaleType="fitCenter"/>
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/black_3"
	                    android:text="@string/deliver"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:layout_marginLeft="20dp"
	                android:gravity="center_horizontal"
	                android:orientation="vertical">
	                <ImageView 
	                    android:id="@+id/id_playbtn"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:src="@drawable/playbtn"
	                    android:scaleType="fitCenter"/>
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/black_3"
	                    android:text="@string/anim"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:layout_marginLeft="20dp"
	                android:gravity="center_horizontal"
	                android:orientation="vertical">
	                <ImageView 
	                    android:id="@+id/id_commentbtn"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:src="@drawable/commentbtn"
	                    android:scaleType="fitCenter"/>
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/black_3"
	                    android:text="@string/comment"/>
	            </LinearLayout>
	        </LinearLayout>
	    </LinearLayout>
	    
	</ScrollView>
</LinearLayout>
